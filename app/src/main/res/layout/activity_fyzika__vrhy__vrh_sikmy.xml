<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.riaditelka.myapplication.Fyzika_Vrhy_VrhSikmy"
    android:background="#a7a7a7">

    <TextView
        android:id="@+id/txt_VrhSikmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:elevation="15dp"
        android:padding="0dp"
        android:text="Vrh šikmý"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:background="#002EB8"
        android:elevation="10dp"
        android:padding="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txt_nav_Fyzika_Vrhy_VrhSikmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:text="Fyzika > Vrhy > Vrh šikmý >"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        tools:context="com.example.riaditelka.myapplication.Fyzika_Vrhy_VrhSikmy"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp">


            <TextView
                android:id="@+id/Fyzika_Vrhy_V0x"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="v₀ₓ = v₀ cos α"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Fyzika_Vrhy_V0y"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/Fyzika_Vrhy_V0x"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="v₀ₓ = v₀ cos α"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Fyzika_Vrhy_X"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/Fyzika_Vrhy_V0y"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="x = v₀t cos α"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Fyzika_Vrhy_y"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/Fyzika_Vrhy_X"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="y = v₀t sin α - ½gt² "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Fyzika_Vrhy_t1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/Fyzika_Vrhy_y"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="t₁ = (v₀ / g) sin α"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Fyzika_Vrhy_t2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/Fyzika_Vrhy_t1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#a7a7a7"
                android:padding="12dp"
                android:text="t₂ = (2v₀ / g) sin α"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

